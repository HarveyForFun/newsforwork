  ]
};

// =================== 加载新闻函数 ===================
function loadNews(sectionId, dataArray) {
  const container = document.getElementById(sectionId);
  container.innerHTML = '';
  dataArray.forEach(item => {
    const div = document.createElement('div');
    div.className = 'news-item';
    div.innerHTML = `<a href="${item.link}" target="_blank">${item.title}</a>
                     <p>${item.summary}</p>`;
    container.appendChild(div);
  });
}

// =================== 初始化页面新闻 ===================
loadNews('internationalNews', testData.international);
loadNews('chinaNews', testData.china);
loadNews('industryNews', testData.industry);

// =================== 工业大宗商品价格图 ===================
const ctx = document.getElementById('commodityChart').getContext('2d');
const commodityChart = new Chart(ctx, {
  type: 'line',
  data: {
    labels: ['1月','2月','3月','4月','5月','6月'],
    datasets: [{
      label: '钢材价格',
      data: [100, 120, 110, 130, 125, 140], // 可替换成 Firebase 动态数据
      borderColor: 'rgba(26, 115, 232, 1)',
      backgroundColor: 'rgba(26, 115, 232, 0.2)',
      fill: true,
    }]
  },
  options: { responsive: true, maintainAspectRatio: false }
});
